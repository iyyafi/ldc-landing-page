---
import { Image } from 'astro:assets'
import logoLDC from '@assets/logo-ldc.png'
import imageLaptop from '@assets/laptop.png'
import { button } from '@styles/button'
import { container } from '@styles/container'
---

<div>
    <div class="bg-gradient-to-r from-[#042a94] to-[#2897ec]">
        <div class={container()}>
            <div class="flex flex-col items-center gap-6 pb-20 pt-8 md:gap-14">
                <Image
                    src={logoLDC}
                    alt="LDC logo"
                    class="max-w-[167px] md:max-w-[222px] md:self-center"
                />
                <div
                    class="flex w-full flex-col items-center gap-6 text-white md:items-start md:gap-6"
                >
                    <h1
                        class="max-w-[500px] text-center text-3xl font-bold md:max-w-[700px] md:text-left md:text-5xl"
                    >
                        JANGAN SAMPAI WEBSITE ANDA JADUL!!
                    </h1>
                    <span
                        class="max-w-[500px] text-center md:max-w-[425px] md:text-left md:text-xl"
                    >
                        Redesign website Anda jadi lebih modern dengan
                        fitur-fitur terbaru untuk meningkatkan traffic dan
                        conversion!
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class={container()}>
        <div
            class="flex flex-col items-center gap-5 md:flex-row-reverse md:justify-between"
        >
            <div
                class="relative flex w-[300px] max-w-full flex-col items-center pt-24 md:w-[60%] md:min-w-[500px]"
            >
                <Image
                    src={imageLaptop}
                    alt="LDC website Laptop"
                    class="absolute bottom-0 left-0 right-0 mx-auto md:left-auto"
                />
            </div>
            <a
                class={`${button({
                    intent: 'primary',
                    size: 'md',
                })} max-w-[250px] md:max-w-[350px]`}
                href={'https://www.longdistancecreator.com/service/website/form-website-service/'}
            >
                REDESIGN SEKARANG
            </a>
        </div>
    </div>
</div>
